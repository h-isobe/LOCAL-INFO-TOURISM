<% posts.each do |post| %>

  <div class="col-xs-8">
    <div class="box1">
      <table style="border:none;">
        <tr>
          <td>
            <i class="fas fa-user"></i>
            <%= post.user.name %>
          </td>
        </tr>
        <tr>
          <td><%= attachment_image_tag post.user, :profile_image, :fill, 100, 100, format: 'jpg', fallback: "no_image.jpg" %></td>
        </tr>
        <tr>
          <td>
            <%= link_to post_path(post) do %>
              <%= post.title %>
            <% end %>
          </td>
        </tr>
        <tr>
          <td><%= post.prefecture %></td>
        </tr>
        <tr>
          <td>
            <% post.categories.each do |category| %>
              <%= category.name %>
            <% end %>
          </td>
        </tr>
        <tr>
          <td>
            <div class="text">
            <!--4.gsub()で正規表現に合致する箇所を空欄にする-->
              <%= simple_format(post.body.gsub!(/[#＃][\w\p{Han}ぁ-ヶｦ-ﾟー]+/, "")) %>
            <!--4.postにタグがあればタグを出力する-->
            </div>
            <% if post.hashtags.any? %>
              <% post.hashtags.each do |hashtag| %>
                <%= link_to hashtag_path(post,hashname: hashtag.hashname) do %>
                  <p>#<%= hashtag.hashname %></p>
                <% end %>
              <% end %>
            <% end %>
          </td>
        </tr>
        <tr>
          <td>
		        <% if post.post_images.present? %>
              <% post.post_images.each do |image| %>
                <%= attachment_image_tag image, :image, :fill, 150, 150 %>
              <% end %>
            <% end %>
	        </td>
        </tr>
        <tr>
          <td>
            <i class="far fa-calendar-alt"></i>
            <%= l post.created_at %>
          </td>
        </tr>
        <tr>
          <td>
            <% if post.favorited_by?(current_user) %>
              <%= link_to post_favorites_path(post), method: :delete do %>
                <i class="fa fa-heart" aria-hidden="true" style="color: red;"></i>
                <%= post.favorites.count %>
              <% end %>
            <% else %>
              <%= link_to post_favorites_path(post), method: :post do %>
                <i class="fa fa-heart-o" aria-hidden="true"></i>
                <%= post.favorites.count %>
              <% end %>
            <% end %>
          
            <%= link_to post_path(post.id) do %>
              <i class="fa fa-comment"></i>
              <%= post.post_comments.count %>
            <% end %>
          </td>
        </tr>
      </table>
    </div>
  </div>

<% end %>