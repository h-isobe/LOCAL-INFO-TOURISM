<%= form_with model: form, local: true do |f| %>
  <div class="field row">
    <%= f.label :タイトル %> (20文字以内で入力)
    <%= f.text_field :title, class: "form-control" %>
  </div>
  <div class="field row">
    <%= f.label :prefecture, '都道府県' %><br>
    <%= f.select :prefecture, Post.prefectures.keys, {prompt: '選択してください'} %>
  </div>
  <div class="field row">
    <%= f.label :category, 'カテゴリー' %><br>
    <%= f.collection_check_boxes(:category_ids, Category.all, :id, :name) do |category| %> 
      <%= category.label do %>
        <%= category.check_box %>
        <%= category.text %>
      <% end %>
    <% end %>
  </div>
  <div class="field row">
    <%= f.label :投稿内容 %> (半角#でハッシュタグ投稿)
    <%= f.text_area :body, class: "form-control" %>
  </div>
  <div class="field row">
    <%= f.label :画像選択 %> (複数可能)
    <%= f.attachment_field :post_images_images, multiple:true %>
  </div>
  <div class="field row">
    <%= f.submit "送信", class: "btn btn-primary btn-block" %>
  </div>
<% end %>