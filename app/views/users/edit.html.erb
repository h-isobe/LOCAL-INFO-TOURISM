<div class="container", style="margin-top: 40px;">
  <div class="row">
    <div class="col-xs-4"></div>
    <div class="col-xs-4">

      <%= render 'posts/errors', obj: @user %>


      <%= form_with model: @user, local: true do |f| %>

        <div class="field row">
          <%= f.label :name %>
          <%= f.text_field :name, class: "form-control" %>
        </div>
        <div class="field row">
          <%= f.label :introduction %>
          <%= f.text_area :introduction, class: "form-control" %>
        </div>
        <div class="text-center">
          <div class="field row">
            <%= attachment_image_tag @user, :profile_image, :fill, 200, 200, fallback: "no_image.jpg"%>
          </div>
        </div>
        <div class="field row">
          <%= f.attachment_field :profile_image, placeholder: "プロフィール画像" %>
        </div>
        <div class="field row">
          <%= f.submit "編集", class: "btn btn-primary btn-block" %>
        </div>

      <% end %>

      <%= link_to "戻る", user_path(@user), class: "btn btn-success" %>

    </div>
  </div>
</div>