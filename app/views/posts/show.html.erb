<h2>投稿詳細</h2>

<div class="box1">
  <table class="table">
  <tr>
    <td><%= attachment_image_tag @post.user, :profile_image_id, :fill, 40, 40, format: 'jpeg', fallback: "no_image.jpg" %></td>
  </tr>
  <tr>
    <td><%= @post.title %></td>
  </tr>
  <tr>
    <td><%= @post.prefecture %></td>
  </tr>
  <tr>
    <td>
      <% @post.categories.each do |category| %>
        <%= category.name %>
      <% end %>
    </td>
  </tr>
  <tr>
    <td><%= @post.body %></td>
  </tr>
  <tr>
    <td>
		  <% if @post.post_images.present? %>
        <% @post.post_images.each do |image| %>
          <%= attachment_image_tag image, :image, :fill, 100, 100 %>
        <% end %>
      <% end %>
	 </td>
  </tr>
  <tr>
    <td><%= l @post.created_at %></td>
  </tr>
  </table>

  <%= link_to "編集", edit_post_path %>
  |
  <%= link_to "削除", post_path(@post), method: :delete %>
</div>
  




  <%= link_to new_post_path do %>
  <p class="text-right">
  <i class="fas fa-plus-circle fa-3x"></i>
  </p>
  <% end %>