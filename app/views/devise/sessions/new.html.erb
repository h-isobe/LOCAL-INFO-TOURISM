<div class="container">
  <div class="row">
    <div class="col-xs-3"></div>
    <h2 class="well well-sm col-xs-6 text-center", style="background-color: #FFFFBB;">
      ログイン 
      <i class="fas fa-sign-in-alt fa-lg"></i>
    </h2>
  </div>

  <div class="row">
    <div class="col-xs-3"></div>
    <div class="well well-sm col-xs-6 text-center", style="background-color: #FFFFBB;">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field", style="padding-top: 50px; color: #888888;">
          <%= f.label :ユーザー名 %><br/>
          <%= f.text_field :name, autofocus: true, autocomplete: "name", :size=>"60" %>
        </div>

        <div class="field", style="color: #888888;">
          <%= f.label :パスワード %>(6文字以上)<br/>
          <%= f.password_field :password, autocomplete: "current-password", :size=>"60" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end %>

        <div class="actions">
          <%= f.submit "ログイン", class: "btn btn-primary" %>
        </div>
      <% end %>

      <div class="registrations-link", style="margin-top: 20px;">
        <%= render "devise/shared/links" %>
      </div>

    </div>
  </div>
</div>
