
<% users.each do |user| %>
  <div class="col-xs-8">
    <div class="box1">
      <table style="border:none;">
        <tr>
          <td><%= attachment_image_tag user, :profile_image, :fill, 200, 150, format: 'jpg', fallback: "no_image.jpg" %></td>
        </tr>
        <tr>
          <td>
            <%= link_to user_path(user) do %>
            <i class="fas fa-user"></i>
            <%= user.name %>
            <% end %>
          </td>
        </tr>
        <tr>
          <td><%= user.introduction %></td>
        </tr>
        <tr>
          <td><%= user.follower.count %>フォロー</td>
        </tr>
        <tr>
          <td><%= user.followed.count %>フォロワー</td>
        </tr>
      </table>
    </div>
  </div>
<% end %>