<% users.each do |user| %>
  <div class="box1">
    <div class="profile-head">
      <h3>PROFILE</h3>
    </div>
        
    <div class="row">
      <div class="profile-box">
        <div class="col-xs-3">
          <div class="user-image">
            <%= attachment_image_tag user, :profile_image, :fill, 200, 200, format: 'jpg', fallback: "no_image.jpg" %>
          </div>
        </div>
        
        <div class="col-xs-9">
          <div class="row">
            <div class="profile-name">
              <%= link_to user_path(user) do %>
                <i class="fas fa-user"></i>
                <%= user.name %>
              <% end %>
            </div>
          </div>
              
          <div class="row">
            <div class="profile-introduction">
              <%= user.introduction %>
            </div>
          </div>

          <div class="row">
            <span class="follow">
              <%= user.follower.count %> フォロー
            </span>
            <span class="follower">
              <%= user.followed.count %> フォロワー
            </span>
            <span class="post-count">
              <%= user.posts.count %> 投稿
            </span>
            <span class="post-favorite">
              <%= user.favorites.count %> いいね
            </span>
          </div>

        </div>
      </div>
    </div>
  </div>
<% end %>
