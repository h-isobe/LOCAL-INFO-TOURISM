<div class="container">
  <div class="row">
    <div class="col-xs-3"></div>
    <h2 class="well well-sm col-xs-6 text-center">パスワードの再設定</h2>
  </div>

  <div class="row">
    <div class="col-xs-3"></div>
    <div class="well well-sm col-xs-6 text-center">
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>

      <div class="actions">
        <%= f.submit "パスワード再設定のメールを送ります", class: "btn btn-primary" %>
      </div>
    <% end %>

      <%= render "devise/shared/links" %>

    </div>
  </div>
</div>
