
  <% users.each do |user| %>
    
      <div class="box1">
        <div class="profile-head">
          <h3>PROFILE</h3>
        </div>
          
          <div class="profile-box">
            <div class="box-user">
              
            <%= attachment_image_tag user, :profile_image, :fill, 200, 150, format: 'jpg', fallback: "no_image.jpg" %>
          
        
              <%= link_to user_path(user) do %>
              <i class="fas fa-user"></i>
              <%= user.name %>
              <% end %>
            
            <%= user.introduction %>
          
            <%= user.follower.count %>フォロー
            <%= user.followed.count %>フォロワー
            </div>
          </div>
        </div>
      </div>
    
  <% end %>
  <%= paginate @users %>