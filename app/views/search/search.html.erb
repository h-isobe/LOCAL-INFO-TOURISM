<div class="container"> 
  <div class="row">
    <div class="col-xs-2"></div>
    <div class="col-xs-8">

      <% if @model == 'user' %>
        <h3 class="text-center">Users search for '<%= @content %>' </h3>
        <%= render 'users/index' , users: @records %>
      <% elsif @model == 'post' %>
        <h3 class="text-center">Posts search for '<%= @content %>' </h3>
        <%= render 'posts/index' , posts: @records %>
      <% end %> 
      
    </div>
  </div>
</div>