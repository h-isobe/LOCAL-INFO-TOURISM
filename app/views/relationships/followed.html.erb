<h2>フォロワー一覧</h2>

<% if @users.count > 0 %>
<% @users.each do |user| %>

  <div class="col-xs-8">
    <div class="box1">
      <table style="border:none;">
        <tr>
          <td><%= attachment_image_tag user, :profile_image_id, :fill, 40, 40, format: 'jpeg', fallback: "no_image.jpg" %></td>
        </tr>
        <tr>
          <td>
            <%= link_to user_path(user) do %>
            <%= user.name %>
            <% end %>
          </td>
        </tr>
        <tr>
          <td><%= user.introduction %></td>
        </tr>
        <tr>
          <td><%= user.follower.count %>フォロー</td>
        </tr>
        <tr>
          <td><%= user.followed.count %>フォロワー</td>
        </tr>
      </table>
    </div>
  </div>

<% end %>

<% else %>
  <p>ユーザーはいません</p>
<% end %>